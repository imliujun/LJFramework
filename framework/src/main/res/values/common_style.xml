<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titlebar_title_text_style">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="titlebar_image_button_style">
        <item name="android:layout_width">@dimen/dp_48
        </item>
        <item name="android:layout_height">@dimen/dp_48
        </item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/dp_12
        </item>
        <item name="android:paddingRight">@dimen/dp_12
        </item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="titlebar_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/dp_24</item>
        <item name="android:minWidth">@dimen/dp_24</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

</resources>
